<!-- res/values/styles.xml -->
<resources>

    <!-- Базовый стайл индикатора -->
    <style name="IndicatorBase">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">4dp</item>
    </style>

    <!-- Не выбранный -->
    <style name="IndicatorUnselected" parent="IndicatorBase">
        <item name="android:background">@drawable/indicator_unselected</item>
    </style>

    <!-- Выбранный -->
    <style name="IndicatorSelected" parent="IndicatorBase">
        <item name="android:background">@drawable/indicator_selected</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Для поддержки старших API -->
        <item name="android:fontFamily">@font/league_spartan</item>
        <!-- Для AppCompat -->
        <item name="fontFamily">@font/league_spartan</item>

        <!-- Переопределяем базовые стили виджетов -->
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
    </style>

    <!-- Общий стиль для TextView -->
    <style name="CustomTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/league_spartan</item>
        <item name="fontFamily">@font/league_spartan</item>
    </style>

    <!-- Общий стиль для Button -->
    <style name="CustomButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/league_spartan</item>
        <item name="fontFamily">@font/league_spartan</item>
    </style>

    <!-- Общий стиль для EditText -->
    <style name="CustomEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/league_spartan</item>
        <item name="fontFamily">@font/league_spartan</item>
    </style>

</resources>
