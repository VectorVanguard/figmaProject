<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Project" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- ваш полупрозрачный статус-бар -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- вот эти две строки задают глобальный fontFamily -->
        <item name="android:fontFamily">@font/league_spartan_thin</item>
        <item name="fontFamily">@font/league_spartan_thin</item>

        <!-- (по желанию) можно также сразу указать свои TextView/Button/EditText стили -->
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
    </style>

    <style name="Theme.Project" parent="Base.Theme.Project" />
</resources>
