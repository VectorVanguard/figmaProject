<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="158dp"
            android:layout_height="141dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:id="@+id/imageCard"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:clipChildren="true"
            android:clipToPadding="true">

        <!-- Основное изображение блюда -->
            <ImageView
                android:id="@+id/imgFood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/into_best_seller1"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!-- Иконка (в левом верхнем углу) -->
        <ImageView
            android:id="@+id/imgLeftIcon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="9dp"
            android:layout_alignTop="@id/imageCard"
            android:layout_alignStart="@id/imageCard"
            android:padding="4dp"
            android:src="@drawable/ic_snacks"
            android:scaleType="centerInside" />

        <!-- Иконка (в правом верхнем углу) -->
        <ImageView
            android:id="@+id/imgRightIcon"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignTop="@id/imageCard"
            android:layout_alignEnd="@id/imageCard"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="9dp"
            android:src="@drawable/ic_heart_border"
            android:padding="3dp"
            android:scaleType="centerInside" />

        <!-- Цена с радиусом слева -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="44dp"
            android:layout_height="16dp"
            android:layout_below="@id/imageCard"
            android:layout_alignEnd="@id/imageCard"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_price_tag"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <!-- Название блюда -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/tvPrice"
            android:layout_alignStart="@id/imageCard"
            android:layout_marginTop="8dp"
            android:text="Sunny Bruschetta"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000" />


        <!-- Рейтинг -->
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="31dp"
            android:layout_height="14dp"
            android:layout_alignTop="@id/tvTitle"
            android:layout_alignEnd="@id/imageCard"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_rating"
            android:gravity="center"
            android:text=""
            android:textSize="10sp"
            android:textColor="@android:color/white" />

        <!-- Описание блюда -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="118dp"
            android:layout_height="24dp"
            android:layout_below="@id/tvTitle"
            android:layout_alignStart="@id/tvTitle"
            android:layout_marginTop="4dp"
            android:text="Lorem ipsum dolor sit amet..."
            android:textSize="12sp"
            android:textColor="#666" />

        <!-- Корзина (иконка) -->
        <ImageView
            android:id="@+id/imgCart"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignEnd="@id/imageCard"
            android:layout_alignBottom="@id/tvDescription"
            android:layout_marginEnd="-3dp"
            android:layout_marginBottom="3dp"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_cart_for_best" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
