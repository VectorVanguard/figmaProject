<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Изображение товара -->
    <ImageView
        android:id="@+id/iv_cart_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/burger" />

    <!-- Информация о товаре -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/tv_cart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strawberry Shake"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_cart_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29/11/24 15:00"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tv_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$20.00"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Управление количеством -->

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_cart_minus"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_minus"/>

        <TextView
            android:id="@+id/tv_cart_quantity"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_weight="800"
            android:textColor="@color/black"
            android:text="1"/>

        <ImageView
            android:id="@+id/btn_cart_plus"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_plus"/>
    </LinearLayout>

</LinearLayout>
