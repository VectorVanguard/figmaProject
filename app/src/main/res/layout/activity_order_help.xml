<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Жёлтая шапка -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FDCB58"
        android:paddingTop="40dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Кнопка "назад" -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/exit_arrow"
            android:contentDescription="Back" />

        <!-- Заголовок -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Основной блок с фоном -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="160dp"
        android:background="@drawable/bg_header_rounded"
        android:padding="16dp" >

        <ImageView
            android:id="@+id/center_image"
            android:layout_width="278dp"
            android:layout_height="457dp"
            android:layout_gravity="center"
            android:contentDescription="Centered image"
            android:src="@drawable/chat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:background="#FFE5D4"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_alignParentBottom="true">

        <!-- Кнопка вложения -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_attachment"
            android:background="@drawable/bg_circle_white"
            android:contentDescription="Attach" />

        <!-- Поле ввода -->
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Write Here..."
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/bg_edittext_rounded"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="14sp" />

        <!-- Микрофон -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_mic"
            android:background="@drawable/bg_circle_white"
            android:contentDescription="Mic" />

        <!-- Отправка -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_send"
            android:background="@drawable/bg_circle_white"
            android:contentDescription="Send" />
    </LinearLayout>


    <!-- Фото по центру -->

</FrameLayout>
